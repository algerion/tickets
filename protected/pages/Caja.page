				<td colspan="1">Porcentaje de descuento:</td>
				<td colspan="1"><com:TTextBox ID="txtPorcDesc" Attributes.onkeyup="cambio()" Attributes.onchange="cambio()" /></td>
			</tr>
			<tr>
				<td colspan="1">Descuento:</td>
